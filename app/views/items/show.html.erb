<section class="merchant_info" style="background-color: #f5f5f5; padding: 10px; border: 1px solid #ccc; margin: 10px;">
  <h1 class="merchant-title" style="background-color: #333; color: #fff; padding: 10px;">
    <%= @item.name %> Item Page
  </h1>

  <ul class="item_info" style="list-style-type: none; padding: 0;">
    <li class="item-name" style="margin: 10px; padding: 10px; border: 1px solid #ccc; background-color: #f5f5f5;">
      <%= @item.name %>
    </li>
    <li class="item_description" style="margin: 10px; padding: 10px; border: 1px solid #ccc; background-color: #f5f5f5;">
      <%= @item.description %>
    </li>
    <li class="item_unit-price" style="margin: 10px; padding: 10px; border: 1px solid #ccc; background-color: #f5f5f5;">
      <%= @item.unit_price %>
    </li>
  </ul>
</section>