<section class="merchant_info" style="background-color: #f5f5f5; padding: 10px; border: 1px solid #ccc; margin: 10px;">
  <h1 class="merchant-title" style="background-color: #333; color: #fff; padding: 10px;"><%= @merchant.name %> Merchant Page</h1>

  <ul class="item_list" style="list-style-type: none; padding: 0;">
    <% @items.each do |item| %>
      <li class="item-name" style="margin: 10px; padding: 10px; border: 1px solid #ccc; background-color: #f5f5f5;"><%= item.name %></li>
    <% end %>
  </ul>
</section>